<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:gravity="center_vertical|center_horizontal">


	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content" android:minWidth="@dimen/delta_popup_width"
		android:paddingTop="5dp" android:paddingBottom="5dp" android:gravity="center_vertical">

		<EditText android:id="@android:id/edit" android:layout_width="0px"
			android:layout_weight="0.2" android:layout_height="wrap_content"
			android:singleLine="true" android:inputType="numberSigned" android:digits="01234567890-+*/=() "
			android:imeOptions="actionGo" android:imeActionLabel="@android:string/ok"
			android:text="0" android:textSize="@dimen/delta_popup_text"/>

		<Button android:id="@android:id/button1" android:layout_width="0px"
			android:layout_weight="0.2" android:layout_height="wrap_content"
			android:text="+1" android:textSize="@dimen/delta_popup_text"
			android:typeface="monospace" android:singleLine="true" android:ellipsize="marquee"/>

		<Button android:id="@android:id/button2" android:layout_width="0px"
			android:layout_weight="0.2" android:layout_height="wrap_content"
			android:text="+5" android:textSize="@dimen/delta_popup_text"
			android:typeface="monospace" android:singleLine="true" android:ellipsize="marquee"/>

		<Button android:id="@android:id/button3" android:layout_width="0px"
			android:layout_weight="0.2" android:layout_height="wrap_content"
			android:text="+10" android:textSize="@dimen/delta_popup_text" 
			android:typeface="monospace" android:singleLine="true" android:ellipsize="marquee"/>

		<Button android:id="@+id/button4" android:layout_width="0px"
			android:layout_weight="0.2" android:layout_height="wrap_content"
			android:text="+20" android:textSize="@dimen/delta_popup_text"
			android:typeface="monospace" android:singleLine="true" android:ellipsize="marquee"/>
	</LinearLayout>


	</LinearLayout>